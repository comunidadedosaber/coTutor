<%= render partial:'layouts/dashboard/header' %>   

<div class="bg-white">
  <div>

    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <section aria-labelledby="products-heading" class="pb-24 pt-6">
        <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-4">
          
          <!-- Sidebar -->
          <%= render partial:'layouts/dashboard/sidebar' %>  

          <!-- Project grid -->
          <div class="lg:col-span-3">        
          
            <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-4">
              <!-- Project monograph -->
              <div class="lg:col-span-3">

                <%= form_with(model: archive) do |form| %>

                  <div class="actions">
                    <%= form.submit %>
                  </div>

                  <% if archive.errors.any? %>
                    <div style="color: red">
                      <h2><%= pluralize(archive.errors.count, "error") %> prohibited this archive from being saved:</h2>

                      <ul>
                        <% archive.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %> 

                  <div class="form-group">
                    <%= form.label :project, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= form.collection_select :project_id, Project.all, :id, :title, { prompt: "Select an option" }, class: "form-control" %>
                    </div>
                  </div>

                  <div class="field">
                    <%= form.label :project_type %>
                    <%= form.select :project_type, options_for_select(['Project', 'Proposal', 'Draft']), {}, class: "placeholder:italic placeholder-text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" %>
                  </div>

                  <div class="field">
                    <%= form.label :archive %>
                    <%= form.text_field :archive %>
                  </div>
                  
                <% end %>
                
              </div> 
            </div> 
          </div>

        </div>  
      </section>              
    </main>  

  </div>      
</div>

<%= render partial:'layouts/dashboard/footer' %>  
