<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <h1>Listagem de Usuários</h1>

  <%= link_to "New user", new_user_path %>
  <hr>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Nome</th>
        <th>Conta</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.user_type %></td>
          <td>
            <%= link_to 'Detalhes', user %>
            <%= link_to 'Editar', edit_user_path(user) %>
            <%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza?', turbo: false } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

