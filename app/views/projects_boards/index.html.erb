<p style="color: green"><%= notice %></p>

<h1>Boards</h1>


<div id="boards">
  <h1>Listagem de membros da banca</h1>  
  <%= link_to "New board", new_projects_board_path %>
  <hr>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Project</th>
        <th>Type</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= board.user.name %></td>
          <td><%= board.project.title %></td>
          <td><%= board.perfil_type %></td>
          <td>
            <%= link_to 'Detalhes', board %>
            <%= link_to 'Editar', edit_projects_board_path(board) %>
            <%= link_to 'Excluir', board, method: :delete, data: { confirm: 'Tem certeza?', turbo: false } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
