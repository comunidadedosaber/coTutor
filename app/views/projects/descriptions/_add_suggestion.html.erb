<%= render partial:'layouts/dashboard/header' %>   


<div class="bg-white">
  <div>

    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

      <section aria-labelledby="suggestions-heading" class="pb-24 pt-6">

        <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-4">
          
          <!-- Sidebar -->
          <%= render partial:'layouts/dashboard/sidebar' %>  

          <!-- Project Suggestions grid -->
          <div class="lg:col-span-3">

            <div class="flex items-baseline justify-between border-b border-gray-200 pb-6 pt-0">
              <h1 class="text-4xl font-bold tracking-tight text-gray-900"> Suggestions </h1>         
            </div>

            <div>
              <form action="<%= projects_suggestions_path %>" method="post" accept-charset="UTF-8">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                <div class="form-group" style="margin: 5px;">
                  <label for="suggestion">Suggestion: <span aria-hidden="true" style="color: red">*</span></label>    
                  <textarea class="tinymce placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" id="suggestion" name="projects_suggestion[suggestion]" placeholder="Suggestion" rows="4" cols="120" required>
                  </textarea>
                
                  <%= tinymce %>
                </div>

                <div class="form-group" style="margin: 5px;">
                  <label for="project_type">Project type: <span aria-hidden="true" style="color: red">*</span></label>
                  <select name="projects_suggestion[project_type]" id="project_type" class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" required>
                    <option value="<%= @project.id %>"> Projecto</option>
                    <option value="<%= @project.id %>"> Proposta </option>
                    <option value="<%= @project.id %>"> AnteProjecto </option>
                    <option value="<%= @project.id %>"> Monografia </option>
                  </select>    
                </div>

                <div class="form-group" style="margin: 5px;">
                  <label for="user_id">User: <span aria-hidden="true" style="color: red">*</span></label>
                  <select name="projects_suggestion[user_id]" id="user_id" class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" required>                    
                    <% @project.projects_member.each do |projects_member| %>
                      <option value="<%= projects_member.user.id %>"> <%= projects_member.user.email %> </option>
                    <% end %>
                  </select>    
                </div>

                <div class="form-group" style="margin: 5px;">
                  <label for="project_id">Project: <span aria-hidden="true" style="color: red">*</span></label>
                  <select name="projects_suggestion[project_id]" id="project_id" class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" required>
                    <option value="<%= @project.id %>"> <%= @project.title %> </option>
                  </select>    
                </div>

                <button type="submit" class="group flex items-center rounded-md bg-blue-500 text-white text-sm font-medium pl-2 pr-3 py-2 shadow-sm" style="background-color: #3b82f6;">Add suggestion</button>
              </form>      
            </div>   

          </div> 

        </div>

      </section>
      
    </main>
  </div>
</div>


<%= render partial:'layouts/dashboard/footer' %>  
